<section>
  <a href="/">Home</a>
<br/>
    <h1>Property Search</h1>

<form method = "POST" id = "fitlers" class="property-filters"></form>

<div>
<label>For:</label>
<select value="{{sellType}}" id="sellType" name="sellType" placeholder="Select">
          <option value="" disabled selected>Select</option>
          <option value="Sale">Sale</option>
          <option value="Rent">Rent</option>
        </select>
</div>

<div>
<label>Home</label>
<select value="{{homeType}}" id="homeType" name="homeType">
          <option value="" disabled selected>Select</option>
          <option value="apartment">Apartment</option>
          <option value="house">House</option>
        </select>
</div>

<div>
<label>
        Price:
        <input type = "text" id="price" name="price" value="{{price}}" placeholder="Enter a value"/>
</label>
</div>

<div>
<label>Number of Bedrooms</label>
<select value="{{numofBedrooms}}" id="numofBedrooms" name="numofBedrooms" placeholder="Select">
          <option value="" disabled selected>Select</option>
          <option value="one">1</option>
          <option value="two">2</option>
          <option value="three">3</option>
          <option value="four">4</option>
          <option value="five">5</option>
          <option value="six">6+</option>
        </select>
</div>

<div>
<label>Number of Bathrooms</label>
<select value="{{numofBathrooms}}" id="numofBathrooms" name="numofBathrooms" placeholder="Select">
          <option value="" disabled selected>Select</option>
          <option value="one1">1</option>
          <option value="two2">2</option>
          <option value="three3">3</option>
          <option value="four4">4</option>
          <option value="five5">5</option>
          <option value="six6">6+</option>
        </select>
</div>

<div>
<label>
        Square Feet:
        <input type = "text" id="squareFeet" name="squareFeet" value="{{squareFeet}}" placeholder="Enter a value"/>
</label>
</div>

<div>
<label>
        Location:
        <input type = "text" id="location" name="location" value="{{location}}" placeholder="Enter a Street"/>
</label>
</div>

<button type="submit">Search</button>

